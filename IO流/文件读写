#include <fstream>
#include <iostream>
#include <string>
using namespace std;
void binary_write(const string &s1)
{
    ofstream ofs("_file.txt", ios::in | ios::binary);
    ofs.write((const char *)&s1, sizeof(s1) / sizeof(char));
}
void binary_read(string &s1)
{
    ifstream ifs("_file.txt", ios::out | ios::binary);
    ifs.read((char *)&s1, sizeof(s1) / sizeof(char));
}
void text_write(const string &s1)
{
    ofstream ofs("_file.txt1");
    ofs << s1;
}
void text_read(string &s1)
{
    ifstream ifs("_file.txt1");
    ifs >> s1;
}

int main()
{
    string str = "中国起飞111111111";
    binary_write(str);
    string out;
    binary_read(out);
    cout << out << endl;
    text_write(str);
    string out1;
    text_read(out1);
    cout << out1 << endl;

    return 0;
}
